                scales: { x: { beginAtZero: true, ticks: { callback: value => `$${value}B` } } }
            }
        });

        new Chart(document.getElementById('revenueProjectionChart'), {
            type: 'line',
            data: {
                labels: ['2025', '2026', '2027', '2028', '2029', '2030', '2031', '2032', '2033', '2034'],
